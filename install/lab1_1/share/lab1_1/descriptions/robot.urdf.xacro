<?xml version="1.0"?>
<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Use the dynamically passed description_dir -->
  <xacro:property name="description_dir" value="$(find lab1_1)/meshes"/>

  <link name="base">
    <!-- Visual -->
    <visual>
      <geometry>
        <mesh filename="${description_dir}/limo_base.stl" scale="1 1 1"/> <!-- Adjust scale if needed -->
      </geometry>
      <material name="Blue">
        <color rgba="0.0 0.5 0.8 1.0"/> <!-- Blue color -->
      </material>
    </visual>

    <!-- Collision -->
    <collision>
      <geometry>
        <mesh filename="${description_dir}/limo_base.stl" scale="1 1 1"/> <!-- Same scale as visual -->
      </geometry>
    </collision>

    <!-- Inertial -->
    <inertial>
      <mass value="1.0"/> <!-- Mass in kg -->
      <origin xyz="0 0 0"/> <!-- Center of mass -->
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/> <!-- Moment of inertia -->
    </inertial>
  </link>

  <!-- Optional: Gazebo-specific settings -->
  <gazebo>
    <static>true</static> <!-- Set true if the robot is not mobile -->
  </gazebo>
</robot>
